<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_accident">
              <t t-call="web.html_container">
                <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">

                        <h3 style="text-decoration:underline;text-align:center;"><b>Accident  Report</b></h3>
                        <br/>
                        <br/>
                        <table width="99%" style="margin-left:50px;margin-top:5px;border: None solid black;">
                            <tr>
                                <td style="width:50px;height:25px" ><span>Reference: </span><span t-att-style="style" t-esc="o.type"/></td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                         <table width="99%" style="border:1px solid black;padding-left:1.16cm;">
                             <thead>
                                <th style="border:1px solid black;text-align:center;"
                                    width="13%"
                                    class="td4">Date </th>
                                 <th style="border:1px solid black;text-align:center;"
                                     width="13%"
                                     class="td4">Description</th>
                            </thead>
                               <tbody>
                                     <tr style="border:1px solid black">
                                        <td style="border:1px solid black;text-align:center;">
                                            <span t-esc="o.date"
                                                  style="font-size:16px;"/>
                                        </td>
                                         <td style="border:1px solid black;text-align:center;">
                                            <span
                                                    t-esc="o.descaccident"
                                                    style="font-size:16px;"/>
                                        </td>
                                    </tr>
                               </tbody>
                         </table>
                         <br/>
                         <br/>
                    </div>
                    <p style="page-break-after:always"></p>
                </t>
           </t>
              </t>
        </template>
    </data>

</odoo>
