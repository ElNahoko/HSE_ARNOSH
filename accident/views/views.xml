<odoo>
  <data>
    <menuitem id="menu_root_lab" name="règles" sequence="40"/>
        <record model="ir.ui.view" id="kanban_view_patient">
            <field name="name">Patient Kanban</field>
            <field name="model">reg.reg</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name='nom'/>
                    <field name='icon'/>
                    <field name='desc'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('reg.reg', 'icon', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <ul>
                                            <li>Nom :<field name="nom"/></li>
                                            <li>Description :<field name="desc"/></li>
                                        </ul>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_lab_patient_tree" model="ir.ui.view">
            <field name="name">lab.patient.tree</field>
            <field name="model">reg.reg</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Patient">
                    <field name="nom" />
                    <field name="icon" />
                    <field name="desc" />
                </tree>
            </field>
        </record>

        <record id="view_lab_patient_form" model="ir.ui.view">
            <field name="name">lab.patient.form</field>
            <field name="model">reg.reg</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Patient">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <field name="icon" widget="image" class="oe_avatar"/>
                        <div name="title_name" class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="nom"
                                                required="1"
                                                placeholder="FullName"
                                                style="padding-right:10px"
                                            />
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                      <field  name="desc" widget="html"/>
                    </sheet>
                </form>
            </field>
        </record>

